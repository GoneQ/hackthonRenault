<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerConstraint"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recyclerIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@drawable/empty_checkpoint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/empty_checkpoint"/>

    <TextView
        android:id="@+id/recyclerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/recyclerIcon"
        app:layout_constraintEnd_toEndOf="@id/recyclerIcon"
        app:layout_constraintTop_toBottomOf="@id/recyclerIcon"
        android:layout_marginTop="-20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>